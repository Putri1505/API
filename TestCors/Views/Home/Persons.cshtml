@{
    ViewData["title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<h1>Persons</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createmodal">Create</button>
<div class="modal fade" id="createmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Create</h5>
                <button class="btn btn-primary" data-dismiss="modal">
                    <i style="color:white" aria-hidden="true" class="fa fa-times"></i>
                </button>
            </div>
            <div id="modal-body" class="modalBody p-3">
                <form action="#" onsubmit="return Insert()">
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputfirstName" class="form-label">First Name</label>
                                <input name="FirstName" type="text" class="form-control" id="inputfirstName" required="">
                                <div id="firstNameHelp" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputlastName" class="form-label">Last Name</label>
                                <input name="LastName" type="text" class="form-control" id="inputlastName" required="">
                                <div id="lastNameHelp" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputemail" class="form-label">Email</label>
                                <input name="Email" type="email" class="form-control" id="inputemail" required="">
                                <div id="emailHelp" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputpassword" class="form-label">Password</label>
                                <input name="Password" type="password" class="form-control" id="inputpassword" minlength="8" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputphone" class="form-label">Phone</label>
                                <input name="Phone" type="text" class="form-control" id="inputphone" required="">
                                <div id="PhoneHelp" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputbirthDate" class="form-label">Birth Date</label>
                                <input name="BirthDate" type="date" class="form-control" id="inputbirthDate" aria-describedby="birthDateHelp" required="">
                                <div id="birthDateHelp" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputsalary" class="form-label">Salary</label>
                                <input name="salary" type="number" min="0" class="form-control" id="inputsalary" required="">
                                <div id="salaryHelp" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputdegree" class="form-label">Degree</label>
                                <input name="Degree" type="text" class="form-control" id="inputdegree" required="">
                                <div id="degreeHelp" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputgpa" class="form-label">GPA</label>
                                <input name="GPA" type="number" min="0" max="4" step="0.01" class="form-control" id="inputgpa" aria-describedby="gpaHelp" required="">
                                <div id="gpaHelp" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="inputuniversityid" class="form-label">University ID</label>
                                <input name="Universityid" type="number" class="form-control" id="inputuniversityid" aria-describedby="universityidHelp" required="">
                                <div id="universityidHelp" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <button type="button" data-dismiss="modal" class="btn btn-light m-2">Cancel</button>
                        <button type="submit" class="btn btn-primary m-2">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<table id="tableUsers" class="table table-striped table-hover table-bordered">
    <thead class="thead-light">
        <tr>
            <td>No</td>
            <td>Nama</td>
            <td>NIK</td>
            <td>Email</td>
            <td>Phone</td>
            <td>Salary</td>
            <td>BirthDate</td>
            <td>GPA</td>
            <td>Degree</td>
            <td>University</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody id="bodyUsers">
    </tbody>
</table>
<div class="modal fade" id="modalUpdate" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Detail Persons</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="modalPoke" class="modal-body">
                <form action="#" onsubmit="return UpdateProfile()">
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="firstName1" class="form-label">First Name</label>
                                <input type="text" id="nik" class="form-control" style="display:none" />
                                <input name="FirstName" type="text" class="form-control" id="firstName1" required="">
                                <div id="firstName1Help" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="lastName1" class="form-label">Last Name</label>
                                <input name="LastName" type="text" class="form-control" id="lastName1" required="">
                                <div id="lastName1Help" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="email1" class="form-label">Email</label>
                                <input disabled name="Email" type="email" class="form-control" id="email1" required="">
                                <div id="email1Help" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="password1" class="form-label">Password</label>
                                <input disabled name="Password" type="password" class="form-control" id="password1" minlength="8" required="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="phone1" class="form-label">Phone</label>
                                <input name="Phone" type="text" class="form-control" id="phone1" required="">
                                <div id="Phone1Help" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="birthDate1" class="form-label">Birth Date</label>
                                <input name="BirthDate" type="date" class="form-control" id="birthDate1" aria-describedby="birthDateHelp" required="">
                                <div id="birthDate1Help" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="salary1" class="form-label">Salary</label>
                                <input name="salary" type="number" min="0" class="form-control" id="salary1" required="">
                                <div id="salary1Help" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="degree1" class="form-label">Degree</label>
                                <input name="Degree" type="text" class="form-control" id="degree1" required="">
                                <div id="degree1Help" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="gpa1" class="form-label">GPA</label>
                                <input name="GPA" type="number" min="0" max="4" step="0.01" class="form-control" id="gpa1" aria-describedby="gpaHelp" required="">
                                <div id="gpa1Help" class="form-text"></div>
                            </div>
                        </div>
                        <div class="col m-2">
                            <div class="mb-3">
                                <label for="universityid1" class="form-label">University ID</label>
                                <input name="Universityid" type="number" class="form-control" id="universityid1" aria-describedby="universityidHelp" required="">
                                <div id="universityid1Help" class="form-text"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <button type="button" data-dismiss="modal" class="btn btn-light m-2">Cancel</button>
                        <button type="submit" class="btn btn-primary m-2">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/Persons.js" asp-append-version="true"></script>
}

